<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>CodeForge</display-name>

  <!-- Filters -->
  <filter>
    <filter-name>AuthGuardFilter</filter-name>
    <filter-class>me.nickhanson.codeforge.web.AuthGuardFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthGuardFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Error pages -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/jsp/error/500.jsp</location>
  </error-page>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>COGNITO_CLIENT_SECRET</param-name>
    <param-value>fsluir74kirvlaq8fecp4dgi1htn11qfdcdfef7tpc08rl8qja5</param-value>
    <!-- Optional: set here for local dev only. In prod, use an environment variable or -DCOGNITO_CLIENT_SECRET. -->
  </context-param>
  <context-param>
    <param-name>h2.tcp.enabled</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>h2.tcp.port</param-name>
    <param-value>9092</param-value>
  </context-param>
</web-app>
